{
    "tasks": [
        {
            "type": "shell",
            "label": "build",
            "command": "clang",
            "args": [
                "${fileBasenameNoExtension}.c",
                "-lm",
                "-Wall",
                "-g",
                "-o",
                "build/${fileBasenameNoExtension}.out"
            ],
            "windows": {
                "command": "g++",
                "args": [
                    "*.c",
                    "-Wall",
                    "-g",
                    "-o",
                    "build/${fileBasenameNoExtension}.exe"
                ],
            },
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run",
            "type": "process",
            "dependsOn": "build",
            "command": "build/${fileBasenameNoExtension}.out",
            "windows": {
                "command": "build/${fileBasenameNoExtension}.exe",
            },
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": false,
                "clear": true
            },
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}